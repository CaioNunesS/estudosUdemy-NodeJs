<%- include ('partials/header.ejs') %>

	<body>
		<%- include ('partials/navbar.ejs') %>

			<div class="container">
				<hr>
				<h1>
					<%= pergunta.titulo %>
				</h1>
				<p>
					<%= pergunta.descricao %>
				</p>
				<hr>
				<form method="post" action="/responder">
					<h3>Responda</h3>
					<label>Resposta</label>
					<textarea name="corpo" placeholder="Digite a sua resposta." class="form-control mt-3"></textarea>
						<input class="mt-4" type="hidden" name="pergunta" value="<%= pergunta.id %>">
						<button type="submit" class="btn btn-primary mt-4 ">Responder</button>
					
				</form>
				<hr>
				<h3>Respostas</h3>
				<hr>
				<% respostas.forEach(resposta => {%>
					<div class="card mt-3">
						<div class="card-body">
							<%= resposta.corpo %>
						</div>
					</div>
				<% }) %>
			</div>
	</body>
	<%- include ('partials/footer.ejs') %>